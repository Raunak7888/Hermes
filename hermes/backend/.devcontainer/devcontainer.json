{
  "name": "Java 17 Environment",
  "image": "mcr.microsoft.com/devcontainers/java:17",  // ***CRITICAL: Correct image***
  "features": {
    "github.com/devcontainers/features/maven": {
      "version": "latest"
    }
  },
  "customizations": {
    "vscode": {
      "extensions": [
        "vscjava.vscode-java-pack",
        "pivotal.vscode-spring-boot"
      ]
    }
  },
  "postCreateCommand": "java --version && mvn -v", // Verification
  "remoteUser": "vscode",
  "containerUser": "vscode"
}